<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_large"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="androidcourse.staytuned.MainActivity">

    <ImageView
        android:contentDescription="@string/main_banner_add"
        android:id="@+id/imageViewAd"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:background="#b1b4b6"
        android:scaleType="centerCrop"
        android:src="@drawable/banner_pic_small"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextSwitcher
        android:id="@+id/textSwitcherStreamingStatus"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="20dp"
        android:background="#b1b4b6"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/imageButtonLatina"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_latina_television" />

        <ImageButton
            android:id="@+id/imageButtonAmerica"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_america_television" />

        <ImageButton
            android:id="@+id/imageButtonAtv"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_atv_television" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/imageButtonGlobal"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="false"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_global_television" />

        <ImageButton
            android:id="@+id/imageButtonCmd"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_cable_magico_deportes" />

        <ImageButton
            android:id="@+id/imageButtonPanamericana"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_panamerican_television" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageButton
            android:id="@+id/imageButtonAtvPlus"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_atvplus_television" />

        <ImageButton
            android:id="@+id/imageButtonTvPeru"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_tv_peru_television" />

        <ImageButton
            android:id="@+id/imageButtonCapital"
            android:layout_width="0dp"
            android:layout_height="115dp"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/image_rounded_corner"
            android:contentDescription="@string/channel_name"
            android:scaleType="centerInside"
            android:src="@drawable/logo_capital_television" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/text_credits"
        android:background="#ffffff"
        android:id="@+id/textView"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
